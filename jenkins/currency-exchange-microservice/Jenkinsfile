pipeline {
    agent { docker { image 'maven:3.9.12' } }
    
    options {
        timestamps()
        timeout(time: 1, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    
   environment {
    DOCKER_CERT_PATH = ''
    DOCKER_TLS_VERIFY = ''
    DOCKER_HOST = 'npipe:////./pipe/docker_engine'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo '========== Checkout Stage =========='
                sh '''
                    echo "Git repository info:"
                    git log --oneline -5
                    echo "Current branch: $(git rev-parse --abbrev-ref HEAD)"
                '''
            }
        }
        
        stage('Build') {
            steps {
                echo '========== Build Stage =========='
                sh '''
                    echo "Maven version:"
                    mvn --version
                    echo "Java version:"
                    java -version
                    echo "Building project..."
                    mvn clean compile
                '''
            }
        }
        
        stage('Test') {
            steps {
                echo '========== Test Stage =========='
                sh '''
                    echo "Running unit tests..."
                    mvn test
                '''
            }
        }
        
        stage('Package') {
            steps {
                echo '========== Package Stage =========='
                sh '''
                    echo "Packaging application..."
                    mvn package -DskipTests
                '''
            }
        }
        
        stage('Verify') {
            steps {
                echo '========== Verify Stage =========='
                sh '''
                    echo "Build artifacts:"
                    find target -name "*.jar" -o -name "*.war" | head -20
                '''
            }
        }
    }
    
    
}