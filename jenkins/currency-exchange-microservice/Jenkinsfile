pipeline {
    agent { docker { image 'maven:3.9.12' } }
    
    options {
        timestamps()
        timeout(time: 1, unit: 'HOURS')
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    
    environment {
        MAVEN_HOME = '/usr/share/maven'
        JAVA_HOME = '/usr/local/openjdk-11'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo '========== Checkout Stage =========='
                sh '''
                    echo "Git repository info:"
                    git log --oneline -5
                    echo "Current branch: $(git rev-parse --abbrev-ref HEAD)"
                '''
            }
        }
        
        stage('Build') {
            steps {
                echo '========== Build Stage =========='
                sh '''
                    echo "Maven version:"
                    mvn --version
                    echo "Java version:"
                    java -version
                    echo "Building project..."
                    mvn clean compile
                '''
            }
        }
        
        stage('Test') {
            steps {
                echo '========== Test Stage =========='
                sh '''
                    echo "Running unit tests..."
                    mvn test
                '''
            }
        }
        
        stage('Package') {
            steps {
                echo '========== Package Stage =========='
                sh '''
                    echo "Packaging application..."
                    mvn package -DskipTests
                '''
            }
        }
        
        stage('Verify') {
            steps {
                echo '========== Verify Stage =========='
                sh '''
                    echo "Build artifacts:"
                    find target -name "*.jar" -o -name "*.war" | head -20
                '''
            }
        }
    }
    
    post {
        always {
            echo '========== Pipeline Finished =========='
            sh 'echo "Build completed at: $(date)"'
        }
        
        success {
            echo '✓ Build SUCCESSFUL'
            sh 'echo "Success: Build completed successfully"'
        }
        
        failure {
            echo '✗ Build FAILED'
            sh 'echo "Failure: Build failed. Check logs above."'
        }
        
        unstable {
            echo '⚠ Build UNSTABLE'
            sh 'echo "Unstable: Tests failed or warnings detected"'
        }
    }
}