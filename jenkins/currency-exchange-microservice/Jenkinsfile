pipeline {
    agent { docker { image 'maven:3.9.12' } }

    stages {
         stage('Checkout') {
            steps {
                sh '''
                    git --version
                    git clone https://github.com/sandeepparmar2k/devops-master-class.git
                '''
            }
        }
    
        stage ('Build') {
            steps {
                echo 'Building..'
                sh 'docker --version'
                sh 'mvn --version'
            }
        }
        stage ('Test') {
            steps {
                echo 'Testing..'
            }
        }
    }

    post {
        always {
            echo 'This will always run'
        }
        success {
            echo 'This will run only if successful'
        }
        failure {
            echo 'This will run only if failed'
        }
    }
}
